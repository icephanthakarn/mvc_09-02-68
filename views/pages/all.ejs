<%- include('../partials/header', { activeMenu: 'all' }) %>

<h2 class="mb-4">สัตว์ทั้งหมดในระบบ</h2>

<div class="mb-3">
  <a href="/"
     class="btn <%= !filterType ? 'btn-primary' : 'btn-outline-primary' %>">
    All
  </a>
  <a href="/?type=Phoenix"
     class="btn <%= filterType === 'Phoenix' ? 'btn-primary' : 'btn-outline-primary' %>">
    Phoenix
  </a>
  <a href="/?type=Dragon"
     class="btn <%= filterType === 'Dragon' ? 'btn-primary' : 'btn-outline-primary' %>">
    Dragon
  </a>
  <a href="/?type=Owl"
     class="btn <%= filterType === 'Owl' ? 'btn-primary' : 'btn-outline-primary' %>">
    Owl
  </a>
</div>

<div class="row">
  <% if(animals.length === 0) { %>
    <div class="col-12">
      <p>ไม่มีข้อมูลสัตว์</p>
    </div>
  <% } else { %>
    <% animals.forEach(a => { %>
      <div class="col-md-6 col-lg-4">
        <div class="card mb-3">
          <div class="card-body">
            <p class="card-text">
              ID: <%= a.id %> | 
              Type: <%= a.type %> | 
              LatestCheck: <%= a.latestCheck %> | 
              Vaccines: <%= a.vaccineCount %>
            </p>
          </div>
        </div>
      </div>
    <% }) %>
  <% } %>
</div>

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
